<div class="twitter-button-wrapper">{{partial "partials/tweet"}}</div>
<h1 class="branding">Ember CLI Addons</h1>
<p class="count">Packages: {{packageCount}}</p>

{{input type="text" value=query placeholder="Filter addons" autofocus="autofocus"}}

{{#each filteredContent itemController="package"}}
  <a href="{{unbound npmLink}}" target="_blank" class="package-link">
    <div class="package-wrapper">
      <div class="left-column">
        <div class="name">{{unbound name}}<br class="visible-xs"><img src="{{unbound travisBadgeURL}}" onerror="this.style.display='none'" class="travis-badge"></div>
        <div class="description">{{unbound doc.description}}</div>
      </div>
      <div class="right-column">
        <img src="{{unbound gravatarURL}}" class="gravatar"> {{unbound doc._npmUser.name}}<br>
        Modified: {{unbound relative-time doc.time.modified}}<br>
        Downloads: {{unbound doc.downloads.downloads}}
      </div>
    </div>
  </a>
{{else}}
  <p class="not-found">Nothing found for "{{query}}"</p>
  <hr>
{{/each}}

<div class="footer">Made by <a href="http://twitter.com/gcollazo">@gcollazo</a> from <a href="http://blimp.io">Blimp</a>. &bull; <a href="https://github.com/gcollazo/ember-cli-addon-search">Source on GitHub</a>.</div>
