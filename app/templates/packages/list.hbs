<div class="search-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        {{input type="search"
        value=query
        placeholder="Filter addons"
        class="form-control search-field"
        autofocus="autofocus"
        on="change"}}
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-packages">
        <thead>
          <tr>
            <th>
              {{#em-sort-button sort="sortBy" by="name"}}
                NAME
              {{/em-sort-button}}
            </th>
            <th class="hidden-xs">
              {{#em-sort-button sort="sortBy" by="_npmUser.name"}}
                OWNER
              {{/em-sort-button}}
            </th>
            <th class="hidden-xs">
              {{#em-sort-button sort="sortBy" by="downloads.downloads"}}
                DOWNLOADS
              {{/em-sort-button}}
            </th>
            <th class="hidden-xs">
              {{#em-sort-button sort="sortBy" by="time.modified"}}
                UPDATED
              {{/em-sort-button}}
            </th>
            <th class="hidden-xs">
              TESTS
            </th>
          </tr>
        </thead>
        <tbody>
          {{#each model as |pkg|}}
            {{em-pkg pkg=pkg query=query}}
          {{/each}}
          {{#em-if-nothing-found signal=query}}
            <td colspan="5">
              <p class="not-found">Nothing found for "{{query}}"</p>
            </td>
          {{/em-if-nothing-found}}
        </tbody>
      </table>
    </div>
  </div>
</div>
